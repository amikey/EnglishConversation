<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    tools:context="com.example.aswanabidin.englishconversation.HalamanLogin">

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/logobiru" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imglogo"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/etemaillogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/et_rounded_corners"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etpasswordlogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/etemaillogin"
            android:layout_marginTop="15dp"
            android:background="@drawable/et_rounded_corners"
            android:drawableLeft="@drawable/ic_pass"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/etlupapassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/etpasswordlogin"
            android:padding="10dp"
            android:text="Forgot Password?"
            android:textColor="@color/biru"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/etlupapassword"
            android:background="@drawable/btn_rounded_corners"
            android:foreground="?attr/selectableItemBackground"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/putih"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnregister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnlogin"
            android:layout_marginTop="15dp"
            android:background="@drawable/stroke_rounded"
            android:foreground="?attr/selectableItemBackground"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/biru"
            android:textSize="14sp" />


    </RelativeLayout>


</RelativeLayout>
