<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_artikel"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    app:cardElevation="0.5dp">

    <RelativeLayout
        android:id="@+id/item_card_artikel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <ImageView
            android:id="@+id/imgartikel"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/abutext" />

        <TextView
            android:id="@+id/tvtitlearticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgartikel"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Title Article"
            android:textColor="@color/biru"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvtitlearticle"
            android:layout_marginLeft="20dp"
            android:text="Admin"
            android:textColor="@color/abutext"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvdeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvemail"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:text="Deskripsi"
            android:textColor="@color/hitam"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imgartikel"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tvemail"
            android:text="Date"
            android:textColor="@color/abutext"
            android:textSize="12sp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>